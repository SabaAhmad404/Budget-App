<%= render partial: 'shared/nav', locals: {imgp: image_path('backbutton.png'), url:unauthenticated_user_path, page_title:'Sign in'}%>

<div class="sign-in">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

   <div class="field">
   <br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" , placeholder: 'Name', class: 'form-control'%>
  </div>

  <div class="field">
   <br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'Email', class: 'form-control' %>
  </div>

  <div class="field">
  
    <br />
    <%= f.password_field :password, autocomplete: "new-password" ,placeholder: 'New-password', class: 'form-control' %>
  </div>

  <div class="field">
    <br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'password-confirmation', class: 'form-control' %>
  </div>


 <%= render "users/shared/links" %>
  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary w-100'  %>
  </div>
<% end %>
</div>


